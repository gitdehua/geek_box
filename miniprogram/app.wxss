/**app.wxss**/
@import "style/default.wxss";
@import "style/iconfont.wxss";
@import "style/ui.wxss";

page {
  --color-bg-1: #f8f8f8;
  background-color: var(--color-bg-1);
  font-size: 32rpx;
  line-height: 1.6;
  --theme-color: #f70;
}

@media (prefers-color-scheme: dark) {
  page {
    --color-bg-1: #212121;
  }
}

.fonticon,
[class*=fonticon]::before {
  font-family: "iconfont" !important;
}

[class*=fonticon]::before {
  color: var(--theme-color);
  font-size: larger;
}

.section {
  margin-bottom: 10px;
  padding: 0 10px;
}

.copy {
  float: right;
  color: var(--theme-color);
}