/* components/msg-box/msg-box.wxss */

.grid {
  position: fixed;
  z-index: 200;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.3);
}

.box {
  display: inline-block;
  width: 60vw;
  margin: auto;
  background-color: #fff;
  border-radius: 6px;
  padding: 20px;
}

.title{
  font-size: larger;
  font-weight: 400;
}

.content{
  margin: 20px 0;
}

.control{
  display: flex;
  padding-top: 10px;
}

.control>view{
  flex: 1;
  text-align: center;
  margin: 0 10px;
}

.confirm{
  color: #f70;
}

.whenHover {
  opacity: 0.7;
}
