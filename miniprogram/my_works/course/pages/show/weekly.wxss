/* my_works/course/pages/show/weekly.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.control {
  position: fixed;
  z-index: 100;
  right: 100rpx;
  bottom: 100rpx;
  width: 3em;
  height: 3em;
  animation: moveControl 0.8s ease-in-out;
  animation-fill-mode: backwards;
}

.control>movable-view {
  width: 3em;
  height: 3em;
  line-height: 3em;
  text-align: center;
  color: #fff;
  background-color: #f90;
  border-radius: 100%;
}

@keyframes moveControl {
  from {
    opacity: 0;
    right: 0;
  }

  to {
    opacity: 1;
    right: 100rpx;
  }
}

.course {
  text-align: center;
  background-color: #fff;
  flex: 1;
  display: flex;
}

.timeInfo {
  width: 80rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.timeInfo>view, .line>view {
  font-size: 2vh;
  /* height: 9.5vh; */
  line-height: 100rpx;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}

.timeInfo>view:not(:first-child) {
  flex: 1;
}

.courseGrid {
  overflow-x: auto;
  position: relative;
  height: 100%;
  overflow-y: hidden;
}

.background {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.background>.line {
  display: flex;
  width: 126vw;
}

.background>.line>view, .background>.line:not(:first-child) {
  flex: 1;
}

.timeInfo>view:first-child, .line:first-child>view {
  height: 5vh;
  line-height: 5vh;
}

.courseInfo {
  width: calc(18vw - 10rpx);
  height: 19vh;
  position: absolute;
  overflow: hidden;
  padding: 5px;
  box-sizing: border-box;
  margin: 5rpx;
  border-radius: 5rpx;
  font-size: 22rpx;
  color: #fff;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: keep-all;
  animation: courseInfoAnimation 0.8s ease-in-out;
  animation-fill-mode: backwards;
  top: 0;
}

@keyframes courseInfoAnimation {
  from {
    opacity: 0;
    transform: translateY(500rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.courseInfo>view {
  position: absolute;
  left: 0;
  bottom: 5px;
  width: 100%;
  background-color: inherit;
}
