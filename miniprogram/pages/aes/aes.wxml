<!--pages/aes/aes.wxml-->
<nav-bar show-capsule='{{false}}' title="AES加密&解密"></nav-bar>
<form bindsubmit="submit">
  <view class="section content">
    <view class="item-y">
      <view class="title">内容</view>
      <view class="data">
        <textarea show-confirm-bar='{{false}}' name="content" placeholder="500字以内" maxlength="500" value="{{content}}"></textarea>
      </view>
    </view>
    <view class='item'>
      <view class='title'>密钥</view>
      <view class='data'>
        <input name="key" placeholder="50位以内" maxlength="50" />
      </view>
    </view>
  </view>
  <view class="section control">
    <button data-action="encode" form-type="submit" type="primary" size="mini">加密</button>
    <button data-action="decode" form-type="submit" type="primary" size="mini">解密</button>
  </view>
</form>
<view class="section content" wx:if="{{result}}">
  <view class="item-y">
    <view class="title">结果
      <text bindtap="copy" class="copy"></text>
    </view>
    <view class="data">
      <textarea show-confirm-bar='{{false}}' placeholder="" maxlength="-1" value="{{result}}"></textarea>
    </view>
  </view>
</view>

<navigator class="nav-bar" url="/pages/aes/encode/encode">发送密文</navigator>