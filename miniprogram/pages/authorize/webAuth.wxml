<mp-msg type="success" title="获取成功" data-weui-theme="{{weuiTheme}}">
  <view slot="desc">为防止恶意请求，请输入以下验证码</view>
  <view slot="extend">
    <view class='code'>{{scene}}</view>
  </view>
  <view slot="handle">
    <button class="weui-btn" bindtap='copy' type="primary">复制验证码</button>
  </view>
  <view slot="footer">
    <view class="weui-footer__links">
      <navigator url="/pages/index/index" open-type='switchTab' class="weui-footer__link">极客宝箱</navigator>
    </view>
    <view class="weui-footer__text">Copyright © imdh.top</view>
  </view>
</mp-msg>