/* pages/curl/curl.wxss */
@import "/style/form.wxss";
tabs{
  display: block;
}

tab-bar {
  display: flex;
  line-height: 3em;
}

tab-bar>view {
  flex: 1;
  text-align: center;
}

tab {
  display: none;
}

tab.show{
  display: block;
  animation: tab-change 0.5s ease-in-out;
}

tab-bar>view.checked {
  border-bottom: 3px solid var(--theme-color);
  color: var(--theme-color);
}

@keyframes tab-change {
  from {
    opacity: 0;
    transform: translateX(50rpx);
  }

  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.content>.item>.title {
  width: 130rpx;
}

.content>.item>.data {
  overflow-x: auto;
}

tab.headers>.item>.title {
  overflow-x: auto;
  width: 230rpx;
  white-space: nowrap;
}

.fonticon_e108::before {
  content: "\e108";
  color: #e64340;
}

.fonticon_e112::before {
  content: "\e112" !important;
  color: #666 !important;
}
