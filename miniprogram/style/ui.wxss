[class*=ui] {
  margin: 0;
  padding: 0;
  --spc1: 8px;
  --spc2: 12px;
  --spc3: 16px;
}

.v-md::after {
  content: "";
  vertical-align: middle;
  height: 100%;
  display: inline-block;
}

.ui-fixed_top {
  position: fixed;
  left: 0;
  top: 0;
}

.ui-fixed_btm {
  position: fixed !important;
  left: 0;
  bottom: 0;
}

.ui-flex {
  display: flex;
}

.ui-flex_col {
  display: flex;
  flex-direction: column;
}

.ui-flex_item {
  flex: 1;
}

.ui-badge {
  display: inline-block;
  padding: 0.15em 0.4em;
  min-width: 8px;
  border-radius: 18px;
  background-color: #fa5151;
  color: #fff;
  line-height: 1.2;
  text-align: center;
  font-size: 12px;
  vertical-align: middle;
}

.ui-btn {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  line-height: 2.55555556;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000;
  background-color: #f8f8f8;
}

.ui-btn::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  display: inline-block;
  top: 0;
  left: 0;
  border: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 10px;
}

.ui-btn_primary {
  color: #fff;
  background-color: var(--theme-color);
}

.ui-btn_mini {
  width: auto;
  display: inline-block;
  line-height: 2.3;
  font-size: 13px;
  padding: 0 1.34em;
}

.ui-badge_dot {
  padding: 0.4em;
  min-width: 0;
}

.ui-input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 1.41176471em;
  line-height: 1.41176471;
}

.ui-textarea {
  display: block;
  border: 0;
  resize: none;
  background: transparent;
  width: 100%;
  color: inherit;
  font-size: 1em;
  line-height: inherit;
  outline: 0;
}

.ui-textarea-counter {
  color: rgba(0, 0, 0, 0.3);
  text-align: right;
}

.ui-select {
  position: relative;
}

.ui-select::before {
  content: "\e015";
  font-family: "iconfont" !important;
  position: absolute;
  top: 50%;
  right: 0;
  color: #aaa;
  font-size: smaller;
  margin-top: -0.5em;
}

.ui-panel {
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-width: 1px 0;
  overflow: hidden;
  margin: var(--spc3) 0;
}

.ui-panel.card {
  margin: var(--spc3) var(--spc2);
  border-radius: var(--spc2);
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.ui-panel_hd {
  padding: var(--spc3) var(--spc3) var(--spc2);
  color: rgba(0, 0, 0, 0.9);
  font-size: 15px;
  font-weight: 700;
  position: relative;
}

.ui-panel_hd::after {
  content: "";
  display: block;
  position: absolute;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  width: calc(100% - var(--spc3) * 2);
  transform: scaleY(0.5);
  bottom: 0;
}

.ui-panel_bd {
  position: relative;
}

.ui-panel_bd:not(:last-child)::after {
  content: "";
  display: block;
  position: absolute;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  width: calc(100% - var(--spc3) * 2);
  transform: scaleY(0.5);
  bottom: 0;
  margin-left: var(--spc3);
}

.ui-cell {
  display: flex;
  align-items: center;
  padding: var(--spc3);
  position: relative;
  background-color: #fff;
}

.ui-cell.p0 {
  padding: 0;
}

.ui-cell:not(:last-child)::after {
  content: "";
  display: block;
  position: absolute;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  width: calc(100% - var(--spc3) * 2);
  transform: scaleY(0.5);
  bottom: 0;
}

.ui-cell_bd {
  flex: 1;
}

.ui-cell_ft {
  text-align: right;
  color: rgba(0, 0, 0, 0.5);
}

.ui-cell_access .ui-cell_ft:after {
  content: "\e015";
  font-family: "iconfont" !important;
  color: rgba(0, 0, 0, 0.6);
}

.ui-form {
  padding: calc(2 * var(--spc3)) 0 0;
  display: flex;
  flex-direction: column;
  min-height: 100%;
  box-sizing: border-box;
  line-height: 1.4;
}

.ui-form_control-area {
  flex: 1;
  margin: calc(2 * var(--spc3)) 0;
}

.ui-form_opr-area {
  margin-bottom: calc(2 * var(--spc3));
}

.ui-form_text-area {
  padding: 0 var(--spc3);
  color: rgba(0, 0, 0, 0.9);
  text-align: center;
}

.ui-form_title {
  font-size: 22px;
  font-weight: 700;
  line-height: 1.36;
}

.ui-form_desc {
  font-size: 17px;
  margin-top: 16px;
}

.ui-cells {
  margin-top: 8px;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
  overflow: hidden;
  position: relative;
}

.ui-cells_title {
  margin-top: var(--spc3);
  margin-bottom: 3px;
  padding: 0 var(--spc3);
  color: rgba(0, 0, 0, 0.5);
  font-size: 14px;
  line-height: 1.4;
}

.ui-cells_group_form .ui-cells_title {
  margin-top: var(--spc3);
  margin-bottom: 8px;
  padding: 0 var(--spc3);
}

.ui-cells_group_form:first-child .ui-cells_title {
  margin-top: 0;
}

.ui-cells_group_form .ui-cell {
  padding: var(--spc3);
  color: rgba(0, 0, 0, 0.9);
}

.ui-cells_group_form .ui-cell_hd {
  min-width: 85px;
  padding-right: 8px;
}

.ui-cells_form .ui-cell_bd {
  display: flex;
}

.ui-cells_group_form .ui-label {
  max-width: 5em;
  margin-right: 8px;
}

.ui-media-box {
  display: flex;
  align-items: center;
  padding: var(--spc3);
  position: relative;
}

.ui-media-box:not(:last-child)::after {
  content: "";
  display: block;
  position: absolute;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  width: calc(100% - var(--spc3) * 2);
  transform: scaleY(0.5);
  bottom: 0;
}

.ui-media-box .ui-media-box_hd {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-right: 10px;
}

.ui-media-box .ui-media-box_bd {
  flex: 1;
  min-width: 0;
}

.ui-media-box_title {
  font-weight: 400;
  font-size: large;
  line-height: 1.4;
  color: rgba(0, 0, 0, 0.9);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
}

.ui-media-box_desc {
  color: rgba(0, 0, 0, 0.3);
  font-size: 14px;
  line-height: 1.4;
  padding-top: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
